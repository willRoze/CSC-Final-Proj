#include <iostream>

using namespace std;

struct person {
   
    string pname;
    long SSN;

    char gender;
    string DOB;
   
    float height;
    float weight;
   
    long fSSN;
    long mSSN;
   
   
};

void displayPersons(struct person *CountyRes1){
    person* tmp[5];
    int pcount = 0;
     for (int i = 0; i < 5; i++){
        tmp[i] = CountyRes1;
        CountyRes1++;
        pcount++;
    }
       CountyRes1-=pcount;
        person* swapper;
        
        
     for(int i = 0; i < pcount; i++){
        for(int j = 1; j < pcount; j++){
            if(tmp[j]->SSN < tmp[j - 1]->SSN){
                swapper = tmp[j];
                tmp[j] = tmp[j - 1];
                tmp[j - 1] = swapper;
            }
        }
    }
    //Done sorting persons by SSN
    cout << "After sort: " << endl;
    for (int i = 0; i < pcount; i++){
                cout << tmp[i]->pname << " | " << tmp[i]->SSN << " | " << tmp[i]->gender << " | " << tmp[i]->DOB << " | "
                << tmp[i]->height << " | " << tmp[i]->weight << " | " << tmp[i]->fSSN << " | "  << tmp[i]->mSSN << " | " <<  endl ;
}
};


